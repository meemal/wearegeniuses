rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to validate image uploads
    function isImageType(contentType) {
      return contentType.matches('image/.*');
    }

    // Helper function to limit file size (5MB)
    function isValidSize(size) {
      return size <= 5 * 1024 * 1024;
    }

    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'naomispirit@gmail.com';
    }

    // Allow authenticated users to read and write their own profile data
    match /profiles/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if (isAdmin() || request.auth.uid == userId)
                   && (
                     // For new uploads, validate content type and size
                     !resource.exists
                     ? isImageType(request.resource.contentType) 
                       && isValidSize(request.resource.size)
                     // For updates/deletes, ensure the file exists
                     : resource.exists
                   );
    }
    
    // Allow authenticated users to read and write their own business data
    match /profiles/{userId}/business-logos/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if (isAdmin() || request.auth.uid == userId)
                   && isImageType(request.resource.contentType)
                   && isValidSize(request.resource.size);
    }

    // Allow authenticated users to read and write their own profile pictures
    match /profiles/{userId}/profilePicture {
      allow read: if request.auth != null;
      allow write: if (isAdmin() || request.auth.uid == userId)
                   && isImageType(request.resource.contentType)
                   && isValidSize(request.resource.size);
    }

    // Allow authenticated users to read and write their own cover photos
    match /profiles/{userId}/coverPhoto {
      allow read: if request.auth != null;
      allow write: if (isAdmin() || request.auth.uid == userId)
                   && isImageType(request.resource.contentType)
                   && isValidSize(request.resource.size);
    }
  }
}